<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="LightGrayColor">#2D2D30</Color>
    <Color x:Key="MediumGrayColor">#3E3E42</Color>
    <Color x:Key="DarkGrayColor">#999999</Color>
    <Color x:Key="TextColor">#F1F1F1</Color>

    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource MediumGrayColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="GrayTextBrush" Color="{StaticResource DarkGrayColor}"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

    <Color x:Key="PrimaryColor">#3399FF</Color>
    <Color x:Key="PrimaryDarkerColor">#007ACC</Color>

    <Color x:Key="SecondaryColor">#4D4D4D</Color>
    <Color x:Key="SecondaryDarkerColor">#333333</Color>

    <Color x:Key="DangerColor">#F44336</Color>
    <Color x:Key="DangerDarkerColor">#D32F2F</Color>

    <Color x:Key="WarningColor">#FFCA28</Color>
    <Color x:Key="WarningDarkerColor">#FFB300</Color>

    <Color x:Key="SuccessColor">#66BB6A</Color>
    <Color x:Key="SuccessDarkerColor">#43A047</Color>

    <!-- Custom Icon Colors -->
    <Color x:Key="FolderIconColor">#FFCA28</Color>
    <Color x:Key="TreeIconColor">#66BB6A</Color>

    <Color x:Key="ButtonTextColor">#FFFFFF</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkerBrush" Color="{StaticResource PrimaryDarkerColor}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkerBrush" Color="{StaticResource SecondaryDarkerColor}"/>

    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="DangerDarkerBrush" Color="{StaticResource DangerDarkerColor}"/>

    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningDarkerBrush" Color="{StaticResource WarningDarkerColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessDarkerBrush" Color="{StaticResource SuccessDarkerColor}"/>

    <SolidColorBrush x:Key="FolderIconBrush" Color="{StaticResource FolderIconColor}"/>
    <SolidColorBrush x:Key="TreeIconBrush" Color="{StaticResource TreeIconColor}"/>

    <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource ButtonTextColor}"/>

    <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlightBrush" Color="#3F3F46"/>

    <Color x:Key="TabHoverColor">#3F3F46</Color>
    <SolidColorBrush x:Key="TabHoverBrush" Color="{StaticResource TabHoverColor}"/>
    <SolidColorBrush x:Key="TabInactiveBackgroundBrush" Color="{StaticResource LightGrayColor}"/>
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="#1E1E1E"/>

</ResourceDictionary>