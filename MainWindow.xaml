<Window x:Class="FileCraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCraft"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Source Folder Selection -->
        <Label Grid.Row="0" Grid.Column="0" Content="Folder to generate the structure from:" FontWeight="SemiBold"/>
        <TextBox x:Name="sourcePathTextBox" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" IsReadOnly="True" Background="#eee"/>
        <Button x:Name="sourceBrowseButton" Grid.Row="1" Grid.Column="1" Content="Browse..." Padding="10,2" Click="SourceBrowseButton_Click"/>

        <!-- Destination Folder Selection -->
        <Label Grid.Row="3" Grid.Column="0" Content="Where to save the .txt file?" FontWeight="SemiBold"/>
        <TextBox x:Name="destinationPathTextBox" Grid.Row="4" Grid.Column="0" Margin="0,0,10,0" IsReadOnly="True" Background="#eee"/>
        <Button x:Name="destinationBrowseButton" Grid.Row="4" Grid.Column="1" Content="Browse..." Padding="10,2" Click="DestinationBrowseButton_Click"/>

        <!-- Action and Status Display -->
        <Button x:Name="generateButton" Grid.Row="5" Grid.Column="0" Content="Generate Structure (.txt)" Padding="10,5" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold" Click="GenerateButton_Click"/>
        <TextBlock x:Name="statusTextBlock" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,10" Opacity="0.7"/>

    </Grid>

</Window>
