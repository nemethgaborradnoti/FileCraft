<Window x:Class="FileCraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCraft"
        xmlns:views="clr-namespace:FileCraft.Views"
        mc:Ignorable="d"
        Title="FileCraft" Height="550" Width="800">
    <Grid>
        <TabControl Margin="5">
            <TabItem Header="Tree Generator">
                <views:TreeGeneratorView/>
            </TabItem>
            <TabItem Header="File Renamer">
                <views:FileRenamerView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
