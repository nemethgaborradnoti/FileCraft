<UserControl x:Class="FileCraft.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:FileCraft.ViewModels.Functional"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:OptionsViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Manage Presets" Margin="5" Padding="10">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding PresetSlots}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Grid Margin="0,8,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Content="Save"
                                                Style="{StaticResource SuccessButton}"
                                                ToolTip="Save current settings to this preset"
                                                Command="{Binding DataContext.SavePresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Width="50" Height="32"/>

                                        <TextBlock Grid.Column="1" Text="{Binding PresetName}" VerticalAlignment="Center" Margin="10, 0" ToolTip="{Binding PresetName}">
                                            <TextBlock.InputBindings>
                                                <MouseBinding MouseAction="LeftClick"
                                                              Command="{Binding DataContext.EditPresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              CommandParameter="{Binding}"/>
                                            </TextBlock.InputBindings>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                    <Setter Property="FontWeight" Value="Normal"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Exists}" Value="True">
                                                            <Setter Property="FontStyle" Value="Normal"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </DataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                                                                <Condition Binding="{Binding Exists}" Value="True" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="TextDecorations" Value="Underline"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <Button Grid.Column="2"
                                                Content="Load"
                                                Command="{Binding DataContext.LoadPresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding Exists}"
                                                Width="50" Height="32" Margin="5,0,0,0"/>

                                        <Button Grid.Column="3"
                                                Style="{StaticResource BorderlessIconButton}"
                                                ToolTip="Delete this preset"
                                                Command="{Binding DataContext.DeletePresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding Exists}"
                                                Width="32" Height="32" Margin="5,0,0,0">
                                            <Image Source="/Resources/delete01.png" />
                                        </Button>
                                    </Grid>
                                    <Separator/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="Open Save Folder"
                            Command="{Binding OpenSaveFolderCommand}"
                            Margin="0,20,0,5"
                            Style="{StaticResource WarningButton}"/>

                    <Button Content="Delete Current Save" 
                            Command="{Binding DeleteCurrentSaveCommand}"
                            Margin="0,0,0,0"
                            Style="{StaticResource DangerButton}"/>
                </StackPanel>
            </GroupBox>

            <DockPanel Grid.Column="1">
                <GroupBox Header="Copy FolderTree content" Margin="5" Padding="10" DockPanel.Dock="Top">
                    <StackPanel>
                        <TextBlock Text="Copy from this Tab:" Margin="0,0,0,2"/>
                        <ComboBox ItemsSource="{Binding AllTabs}"
                                  SelectedItem="{Binding SelectedSourceTab}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding IconPath}" Width="20" Height="20" Margin="0,0,5,0" VerticalAlignment="Center">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IconPath}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="Copy to this tab:" Margin="0,10,0,2"/>
                        <ComboBox ItemsSource="{Binding AllTabs}"
                                  SelectedItem="{Binding SelectedDestinationTab}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding IconPath}" Width="20" Height="20" Margin="0,0,5,0" VerticalAlignment="Center">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IconPath}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="IsEnabled" Value="{Binding IsSelectable}"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <Button Content="Copy Folder Tree"
                                Command="{Binding CopyFolderTreeCommand}"
                                HorizontalAlignment="Left"
                                Margin="0,15,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Ignore folders" Margin="5" Padding="10">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Edit folders" Command="{Binding EditIgnoredFoldersCommand}" Margin="0,0,5,0"/>
                        </StackPanel>

                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Background="{StaticResource TextBoxBackgroundBrush}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                <TextBlock Text="{Binding IgnoredFoldersText}" TextWrapping="Wrap" Foreground="{StaticResource GrayTextBrush}"/>
                            </ScrollViewer>
                        </Border>
                    </DockPanel>
                </GroupBox>
            </DockPanel>
        </Grid>

        <TextBlock Grid.Row="1" Text="{Binding Version, StringFormat='Version {0}'}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="12"
                   Foreground="Gray"
                   Margin="10"/>
    </Grid>
</UserControl>

