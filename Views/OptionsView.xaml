<UserControl x:Class="FileCraft.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:FileCraft.ViewModels.Functional"
             xmlns:icons="clr-namespace:Fonts"
             xmlns:helpers="clr-namespace:FileCraft.Shared.Helpers"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:OptionsViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HeaderStackPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="Auto"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Presets">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="CopyTree">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="IgnoredFolders">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="3*"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Presets">
                                    <Setter Property="Width" Value="*"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="CopyTree">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="IgnoredFolders">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="2*"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Presets">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="CopyTree">
                                    <Setter Property="Width" Value="*"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="IgnoredFolders">
                                    <Setter Property="Width" Value="*"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Margin="5" Padding="10">
                <GroupBox.Header>
                    <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                        <TextBlock Text="{DynamicResource ManagePresetsHeader}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <Button Command="{Binding FullscreenManager.ToggleCommand}"
                                CommandParameter="{x:Static viewmodels:OptionsFullscreenState.Presets}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource FullscreenButtonStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Presets">
                                            <Setter Property="Tag" Value="Active"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding PresetSlots}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Grid Margin="0,8,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Content="{DynamicResource Common_SaveButton}"
                                                Style="{StaticResource SuccessButton}"
                                                ToolTip="{DynamicResource SavePresetTooltip}"
                                                Command="{Binding DataContext.SavePresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Width="50" Height="32"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                            <Border x:Name="PresetNameBorder" Background="Transparent" CornerRadius="4" Padding="5,2">
                                                <TextBlock Text="{Binding PresetName}" ToolTip="{Binding PresetName}">
                                                    <TextBlock.InputBindings>
                                                        <MouseBinding MouseAction="LeftClick"
                                                                      Command="{Binding DataContext.EditPresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                      CommandParameter="{Binding}"/>
                                                    </TextBlock.InputBindings>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontSize" Value="14"/>
                                                            <Setter Property="FontStyle" Value="Italic"/>
                                                            <Setter Property="FontWeight" Value="Normal"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Exists}" Value="True">
                                                                    <Setter Property="FontStyle" Value="Normal"/>
                                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                                    <Setter Property="Cursor" Value="Hand"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                            <TextBlock FontStyle="Italic"
                                                       FontSize="11"
                                                       Foreground="{StaticResource GrayTextBrush}"
                                                       Margin="5,0,0,0">
                                                <Run Text="{DynamicResource LastModifiedLabel}"/>
                                                <Run Text="{Binding LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"/>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Exists}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>

                                        <Button Grid.Column="2"
                                                Content="{DynamicResource Common_LoadButton}"
                                                Command="{Binding DataContext.LoadPresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding Exists}"
                                                Width="50" Height="32" Margin="5,0,0,0"/>

                                        <Button Grid.Column="3"
                                                Style="{StaticResource BorderlessIconButton}"
                                                ToolTip="{DynamicResource DeletePresetTooltip}"
                                                Command="{Binding DataContext.DeletePresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding Exists}"
                                                Width="32" Height="32" Margin="5,0,0,0">
                                            <Viewbox>
                                                <TextBlock Text="{Binding Source={x:Static helpers:AppIcons.Delete}, Path=Glyph}" FontFamily="{StaticResource MaterialIcons}" Foreground="{Binding Source={x:Static helpers:AppIcons.Delete}, Path=Brush}" />
                                            </Viewbox>
                                        </Button>
                                    </Grid>
                                    <Separator/>
                                </StackPanel>
                                <DataTemplate.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsMouseOver, ElementName=PresetNameBorder}" Value="True" />
                                            <Condition Binding="{Binding Exists}" Value="True" />
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="PresetNameBorder"
                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                    To="{StaticResource PrimaryColor}" Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </MultiDataTrigger.EnterActions>
                                        <MultiDataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="PresetNameBorder"
                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                    To="Transparent" Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </MultiDataTrigger.ExitActions>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsMouseOver, ElementName=PresetNameBorder}" Value="True" />
                                            <Condition Binding="{Binding Exists}" Value="True" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter TargetName="PresetNameBorder" Property="TextBlock.Foreground" Value="{StaticResource ButtonTextBrush}"/>
                                    </MultiDataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="{DynamicResource OpenSaveFolderButton}"
                            Command="{Binding OpenSaveFolderCommand}"
                            Margin="0,20,0,5"
                            Style="{StaticResource WarningButton}"/>

                    <Button Content="{DynamicResource DeleteCurrentSaveButton}"
                            Command="{Binding DeleteCurrentSaveCommand}"
                            Margin="0,0,0,0"
                            Style="{StaticResource DangerButton}"/>
                </StackPanel>
            </GroupBox>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition>
                        <RowDefinition.Style>
                            <Style TargetType="RowDefinition">
                                <Setter Property="Height" Value="Auto"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="CopyTree">
                                        <Setter Property="Height" Value="*"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="IgnoredFolders">
                                        <Setter Property="Height" Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RowDefinition.Style>
                    </RowDefinition>
                    <RowDefinition>
                        <RowDefinition.Style>
                            <Style TargetType="RowDefinition">
                                <Setter Property="Height" Value="*"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="CopyTree">
                                        <Setter Property="Height" Value="0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="IgnoredFolders">
                                        <Setter Property="Height" Value="*"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RowDefinition.Style>
                    </RowDefinition>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Margin="5" Padding="10">
                    <GroupBox.Header>
                        <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                            <TextBlock Text="{DynamicResource CopyFolderTreeContentHeader}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <Button Command="{Binding FullscreenManager.ToggleCommand}"
                                    CommandParameter="{x:Static viewmodels:OptionsFullscreenState.CopyTree}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource FullscreenButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="CopyTree">
                                                <Setter Property="Tag" Value="Active"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </GroupBox.Header>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource CopyFromTabLabel}" Margin="0,0,0,2"/>
                        <ComboBox ItemsSource="{Binding AllTabs}"
                                  SelectedItem="{Binding SelectedSourceTab}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}"
                                                   FontFamily="{StaticResource MaterialIcons}"
                                                   Foreground="{Binding IconBrush}"
                                                   FontSize="20" Margin="0,0,5,0" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Icon}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="{DynamicResource CopyToTabLabel}" Margin="0,10,0,2"/>
                        <ComboBox ItemsSource="{Binding AllTabs}"
                                  SelectedItem="{Binding SelectedDestinationTab}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}"
                                                   FontFamily="{StaticResource MaterialIcons}"
                                                   Foreground="{Binding IconBrush}"
                                                   FontSize="20" Margin="0,0,5,0" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Icon}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="IsEnabled" Value="{Binding IsSelectable}"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <Button Content="{DynamicResource CopyFolderTreeButton}"
                                Command="{Binding CopyFolderTreeCommand}"
                                HorizontalAlignment="Left"
                                Margin="0,15,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="1" Margin="5" Padding="10">
                    <GroupBox.Header>
                        <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                            <TextBlock Text="{DynamicResource IgnoreFoldersHeader}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <Button Command="{Binding FullscreenManager.ToggleCommand}"
                                    CommandParameter="{x:Static viewmodels:OptionsFullscreenState.IgnoredFolders}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource FullscreenButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="IgnoredFolders">
                                                <Setter Property="Tag" Value="Active"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </GroupBox.Header>
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="{DynamicResource EditFoldersButton}" Command="{Binding EditIgnoredFoldersCommand}" Margin="0,0,5,0"/>
                        </StackPanel>

                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Background="{StaticResource TextBoxBackgroundBrush}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                <TextBlock Text="{Binding IgnoredFoldersText}" TextWrapping="Wrap" Foreground="{StaticResource GrayTextBrush}"/>
                            </ScrollViewer>
                        </Border>
                    </DockPanel>
                </GroupBox>
            </Grid>
        </Grid>

        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="12"
                   Foreground="Gray"
                   Margin="10">
            <Run Text="{DynamicResource Common_VersionLabel}"/>
            <Run Text="{Binding Version, Mode=OneWay}"/>
        </TextBlock>
    </Grid>
</UserControl>