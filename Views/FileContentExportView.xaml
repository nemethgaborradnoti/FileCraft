<UserControl x:Class="FileCraft.Views.FileContentExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:FileCraft.ViewModels.Functional"
             xmlns:controls="clr-namespace:FileCraft.Views.Shared.Controls"
             xmlns:local="clr-namespace:FileCraft.ViewModels.Functional"
             xmlns:icons="clr-namespace:Fonts"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:FileContentExportViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="BadgeToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{StaticResource SecondaryBrush}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="*"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Files">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="240"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Files">
                                <Setter Property="Height" Value="*"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="Auto"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Files">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="6*"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                    <Setter Property="Width" Value="*"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="4*"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                    <Setter Property="Width" Value="*"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0">
                <GroupBox.Header>
                    <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                        <TextBlock Text="{DynamicResource Common_FoldersHeader}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <ItemsControl ItemsSource="{Binding LinkedTabs}" Margin="5,0,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IconGlyph}"
                                               FontFamily="{StaticResource MaterialIcons}"
                                               Foreground="{Binding IconBrush}"
                                               FontSize="20"
                                               Margin="2,0"
                                               VerticalAlignment="Center"
                                               ToolTip="{Binding Name}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <controls:FullscreenToggleButton Command="{Binding FullscreenManager.ToggleCommand}"
                                                         CurrentState="{Binding FullscreenManager.CurrentState}"
                                                         TargetState="{x:Static local:ExportFullscreenState.Folders}"/>
                    </StackPanel>
                </GroupBox.Header>
                <TreeView ItemsSource="{Binding RootFolders}" BorderThickness="0"
                          ItemContainerStyle="{StaticResource SharedTreeViewItemStyle}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" IsThreeState="True" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>

            <GroupBox Grid.Column="1">
                <GroupBox.Header>
                    <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                        <TextBlock Text="{DynamicResource FileContent_ExtensionsHeader}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <controls:FullscreenToggleButton Command="{Binding FullscreenManager.ToggleCommand}"
                                                         CurrentState="{Binding FullscreenManager.CurrentState}"
                                                         TargetState="{x:Static local:ExportFullscreenState.Extensions}"/>
                    </StackPanel>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Background="{StaticResource TextBoxBackgroundBrush}"
                            Margin="0,0,0,5"
                            MaxHeight="80">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <TextBlock Text="{Binding SelectedExtensionsText}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource GrayTextBrush}"/>
                        </ScrollViewer>
                    </Border>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <ComboBox ItemsSource="{Binding AvailableExtensions}"
                                  IsEditable="True"
                                  IsReadOnly="True"
                                  StaysOpenOnEdit="True"
                                  MaxDropDownHeight="200">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                          Content="{Binding Name}"
                                          Margin="2"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Background="Transparent"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="{DynamicResource FileContent_ExtensionsPlaceholder}"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Margin="10,0"
                                   Foreground="{StaticResource GrayTextBrush}"/>
                    </Grid>

                    <Border Grid.Row="2"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Background="{StaticResource TextBoxBackgroundBrush}"
                            Margin="0,0,0,5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <TextBlock Text="{Binding IgnoredFilesText}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource GrayTextBrush}"/>
                        </ScrollViewer>
                    </Border>

                    <Button Grid.Row="3"
                            Content="{DynamicResource FileContent_IgnoreCommentsButton}"
                            Command="{Binding ConfigureIgnoredCommentsCommand}"
                            ToolTip="{DynamicResource FileContent_IgnoreCommentsTooltip}"/>
                </Grid>
            </GroupBox>
        </Grid>

        <GroupBox Grid.Row="1">
            <GroupBox.Header>
                <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                    <TextBlock Text="{DynamicResource FileContent_FilesHeader}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <controls:FullscreenToggleButton Command="{Binding FullscreenManager.ToggleCommand}"
                                                         CurrentState="{Binding FullscreenManager.CurrentState}"
                                                         TargetState="{x:Static local:ExportFullscreenState.Files}"/>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="5,2,5,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <DockPanel Grid.Column="0">
                        <TextBlock Text="{DynamicResource Common_SearchLabel}" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Grid>
                            <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                     Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock IsHitTestVisible="False"
                                       Text="{DynamicResource Common_FilterPlaceholder}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10,0,0,0"
                                       Foreground="{StaticResource GrayTextBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchFilter}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </DockPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <Button Content="{DynamicResource FileContent_BulkSearchButton}"
                                Command="{Binding BulkSearchCommand}"
                                Style="{StaticResource WarningButton}"
                                Margin="{StaticResource RightMargin}"/>

                        <StackPanel VerticalAlignment="Center">
                            <ToggleButton Style="{StaticResource BadgeToggleButtonStyle}"
                                          IsChecked="{Binding IsShowingOnlySelected}"
                                          Margin="0,0,0,2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{DynamicResource FileContent_ShowOnlySelected}" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Static icons:MaterialIcons.check_box}" FontFamily="{StaticResource MaterialIcons}" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </ToggleButton>
                            <ToggleButton Style="{StaticResource BadgeToggleButtonStyle}"
                                          IsChecked="{Binding IsShowingOnlyUnselected}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{DynamicResource FileContent_ShowOnlyUnselected}" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Static icons:MaterialIcons.check_box_outline_blank}" FontFamily="{StaticResource MaterialIcons}" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </ToggleButton>
                        </StackPanel>

                        <Button Content="{DynamicResource FileContent_ClearFilterButton}"
                                Command="{Binding ClearFilterCommand}"
                                IsEnabled="{Binding CanClearFilter}"
                                Style="{StaticResource DangerButton}"
                                Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1">
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{Binding AreAllFilesSelected}" IsThreeState="True" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{DynamicResource Common_SelectAll}" FontWeight="SemiBold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                    <Separator/>
                </StackPanel>

                <ListView Grid.Row="2" ItemsSource="{Binding FilteredSelectableFiles}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0"
                          ItemContainerStyle="{StaticResource SharedListViewItemStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center">
                                <TextBlock Text="{Binding RelativePath}" TextTrimming="CharacterEllipsis"/>
                            </CheckBox>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock>
                    <Run Text="{DynamicResource FileContent_TotalFilesLabel}" FontWeight="Bold"/>
                    <Run Text="{Binding TotalFilesCount, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="{DynamicResource FileContent_FilteredFilesLabel}" FontWeight="Bold"/>
                    <Run Text="{Binding AvailableFilesCount, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="{DynamicResource FileContent_SelectedFilesLabel}" FontWeight="Bold"/>
                    <Run Text="{Binding SelectedFilesCount, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
            <controls:ExportOptionsControl DataContext="{Binding}" />
            <Button Content="{DynamicResource FileContent_ExportButton}"
                    Command="{Binding ExportFileContentCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>