<UserControl x:Class="FileCraft.Views.FileContentExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:FileCraft.ViewModels.Functional"
             xmlns:controls="clr-namespace:FileCraft.Views.Shared.Controls"
             xmlns:local="clr-namespace:FileCraft.ViewModels.Functional"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:FileContentExportViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HeaderStackPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="*"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Files">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="240"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Files">
                                <Setter Property="Height" Value="*"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="Auto"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Files">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="6*"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                    <Setter Property="Width" Value="*"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="4*"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                    <Setter Property="Width" Value="*"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0">
                <GroupBox.Header>
                    <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                        <TextBlock Text="Folders to Include" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <Button Command="{Binding FullscreenManager.ToggleCommand}"
                                CommandParameter="{x:Static local:ExportFullscreenState.Folders}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource FullscreenButtonStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                            <Setter Property="Tag" Value="Active"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </GroupBox.Header>
                <TreeView ItemsSource="{Binding RootFolders}" BorderThickness="0"
                          ItemContainerStyle="{StaticResource SharedTreeViewItemStyle}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" IsThreeState="True" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>

            <GroupBox Grid.Column="1">
                <GroupBox.Header>
                    <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                        <TextBlock Text="File extensions to include" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <Button Command="{Binding FullscreenManager.ToggleCommand}"
                                CommandParameter="{x:Static local:ExportFullscreenState.Extensions}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource FullscreenButtonStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Extensions">
                                            <Setter Property="Tag" Value="Active"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Background="{StaticResource TextBoxBackgroundBrush}"
                            Margin="0,0,0,5"
                            MaxHeight="80">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <TextBlock Text="{Binding SelectedExtensionsText}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource GrayTextBrush}"/>
                        </ScrollViewer>
                    </Border>

                    <ComboBox Grid.Row="1"
                              ItemsSource="{Binding AvailableExtensions}"
                              IsEditable="True"
                              IsReadOnly="True"
                              Text="Select Extensions..."
                              StaysOpenOnEdit="True"
                              MaxDropDownHeight="200"
                              Margin="0,0,0,10">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected}"
                                          Content="{Binding Name}"
                                          Margin="2"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Background="Transparent"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Border Grid.Row="2"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Background="{StaticResource TextBoxBackgroundBrush}"
                            Margin="0,0,0,5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <TextBlock Text="{Binding IgnoredFilesText}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource GrayTextBrush}"/>
                        </ScrollViewer>
                    </Border>

                    <Button Grid.Row="3"
                            Content="Ignore comment on these files"
                            Command="{Binding ConfigureIgnoredCommentsCommand}"
                            ToolTip="Select files to ignore '///' comments."/>
                </Grid>
            </GroupBox>
        </Grid>

        <GroupBox Grid.Row="1">
            <GroupBox.Header>
                <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                    <TextBlock Text="Files to Export" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <Button Command="{Binding FullscreenManager.ToggleCommand}"
                            CommandParameter="{x:Static local:ExportFullscreenState.Files}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FullscreenButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Files">
                                        <Setter Property="Tag" Value="Active"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="5,2,5,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <DockPanel Grid.Column="0">
                        <TextBlock Text="Search:" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Grid>
                            <TextBox Style="{StaticResource ModernTextBoxStyle}"
                                     Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock IsHitTestVisible="False"
                                       Text="Filter by file path..."
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10,0,0,0"
                                       Foreground="{StaticResource GrayTextBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchFilter}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </DockPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <Button Content="Bulk Search"
                                Command="{Binding BulkSearchCommand}"
                                Style="{StaticResource WarningButton}"
                                Margin="0,0,10,0"/>

                        <StackPanel VerticalAlignment="Center">
                            <CheckBox Content="Show only selected"
                                      IsChecked="{Binding IsShowingOnlySelected}"
                                      Margin="0,0,0,2"/>
                            <CheckBox Content="Show only unselected"
                                      IsChecked="{Binding IsShowingOnlyUnselected}"/>
                        </StackPanel>

                        <Button Content="Clear Filter"
                                Command="{Binding ClearFilterCommand}"
                                IsEnabled="{Binding CanClearFilter}"
                                Style="{StaticResource DangerButton}"
                                Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1">
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{Binding AreAllFilesSelected}" IsThreeState="True" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Select all" FontWeight="SemiBold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                    <Separator/>
                </StackPanel>

                <ListView Grid.Row="2" ItemsSource="{Binding FilteredSelectableFiles}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0"
                          ItemContainerStyle="{StaticResource SharedListViewItemStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center">
                                <TextBlock Text="{Binding RelativePath}" TextTrimming="CharacterEllipsis"/>
                            </CheckBox>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock>
                    <Run Text="Total files:" FontWeight="Bold"/>
                    <Run Text="{Binding TotalFilesCount, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Filtered:" FontWeight="Bold"/>
                    <Run Text="{Binding AvailableFilesCount, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Selected:" FontWeight="Bold"/>
                    <Run Text="{Binding SelectedFilesCount, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
            <controls:ExportOptionsControl DataContext="{Binding}" />
            <Button Content="Export File Contents"
                    Command="{Binding ExportFileContentCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>