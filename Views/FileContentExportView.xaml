<UserControl x:Class="FileCraft.Views.FileContentExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileCraft.Views"
             xmlns:viewModels="clr-namespace:FileCraft.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Options -->
            <RowDefinition Height="Auto" />
            <!-- Buttons for loading and selection -->
            <RowDefinition Height="*" />
            <!-- File List -->
            <RowDefinition Height="Auto" />
            <!-- Action Button -->
        </Grid.RowDefinitions>

        <!-- Options Panel -->
        <StackPanel Grid.Row="0">
            <!-- File Extensions Input -->
            <Label Content="File extensions to include (separated by ';' semicolons):" FontWeight="SemiBold"/>
            <TextBox Text="{Binding FileExtensions, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" ToolTip="For example: .cs;.html;.css;.js;.txt"/>

            <!-- Exclude Folders Input -->
            <Label Content="Folders to exclude (separated by ';' semicolons):" FontWeight="SemiBold"/>
            <TextBox x:Name="excludeFoldersTextBox" Text="{Binding ContentExport_ExcludeFoldersText, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" ToolTip="For example: .git;node_modules;bin;obj"/>

            <!-- Include Subfolders Checkbox -->
            <CheckBox Content="Include files in subfolders" IsChecked="{Binding ContentExport_IncludeSubfolders}" Margin="0,5,0,10"/>
        </StackPanel>

        <!-- Load Files and Select/Deselect All Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- This button is only visible when more than 100 files are found and need manual loading. -->
            <Button Content="Load Files" 
                    Command="{Binding LoadFilesCommand}" 
                    Padding="10,2" 
                    Margin="0,0,10,0"
                    Visibility="{Binding ShowLoadFilesButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Content="Select All" Command="{Binding SelectAllFilesCommand}" Padding="10,2" Margin="0,0,5,0"/>
            <Button Content="Deselect All" Command="{Binding DeselectAllFilesCommand}" Padding="10,2"/>
        </StackPanel>

        <!-- Files ListBox -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="3">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding SelectableFiles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" Content="{Binding FullPath}" Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Action Button -->
        <Button Grid.Row="3" 
                Content="Export Selected Files Content (.txt)" 
                Padding="10,5" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                FontWeight="Bold" 
                Margin="0,15,0,0"
                Command="{Binding ExportFileContentCommand}"/>
    </Grid>
</UserControl>
