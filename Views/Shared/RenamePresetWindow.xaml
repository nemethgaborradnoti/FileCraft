<Window x:Class="FileCraft.Views.Shared.RenamePresetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Preset Name"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        MinWidth="300">
    <StackPanel Margin="15">
        <TextBlock x:Name="PromptText" Margin="0,0,0,10"/>
        <TextBox x:Name="NameTextBox" MinWidth="250" Margin="0,0,0,15" VerticalContentAlignment="Center" Padding="3"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" MinWidth="80" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
