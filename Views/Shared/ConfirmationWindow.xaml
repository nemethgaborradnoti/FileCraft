<Window x:Class="FileCraft.Views.Shared.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:FileCraft.ViewModels.Shared"
        xmlns:local="clr-namespace:FileCraft.Views.Shared"
        mc:Ignorable="d"
        Title="{Binding ActionName, Mode=OneWay}" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner"
        MinWidth="400" MaxWidth="600"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=viewmodels:ConfirmationViewModel}">
    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="{Binding Message, Mode=OneWay}" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="500"/>

            <TextBlock TextAlignment="Center" Margin="0,10,0,0" 
                       Visibility="{Binding FilesAffected, Converter={StaticResource NullToVisibilityConverter}}">
                 <Run Text="{Binding FilesAffected, Mode=OneWay}"/>
                 <Run Text="files affected."/>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Yes" Click="YesButton_Click" IsDefault="True" MinWidth="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" IsCancel="True" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
