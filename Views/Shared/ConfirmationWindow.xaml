<Window x:Class="FileCraft.Views.Shared.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:FileCraft.ViewModels.Shared"
        xmlns:local="clr-namespace:FileCraft.Views.Shared"
        mc:Ignorable="d"
        Title="{Binding ActionName, Mode=OneWay}" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner"
        MinWidth="400" MaxWidth="600"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=viewmodels:ConfirmationViewModel}">
    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="{Binding IconPath}" Width="48" Height="48" Margin="0,0,15,0" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCopyTreeMessage}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <TextBlock Text="{Binding Message, Mode=OneWay}" TextWrapping="Wrap" TextAlignment="Left" MaxWidth="500"/>
                <TextBlock TextAlignment="Left" Margin="0,10,0,0" 
                           Visibility="{Binding FilesAffected, Converter={StaticResource NullToVisibilityConverter}}">
                    <Run Text="{Binding FilesAffected, Mode=OneWay}"/>
                    <Run Text="files affected."/>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCopyTreeMessage}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <TextBlock Text="Are you sure you want to copy the folder tree of" TextWrapping="Wrap" />
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Image Source="{Binding SourceTabIcon}" Width="20" Height="20" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="{Binding SourceTabName}" FontWeight="Bold"/>
                        <Run Text="{Binding SourceFolderCount, StringFormat='({0} folders)'}"/>
                    </TextBlock>
                </StackPanel>
                <TextBlock Text="to" Margin="0,5,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding DestinationTabIcon}" Width="20" Height="20" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="{Binding DestinationTabName}" FontWeight="Bold"/>
                        <Run Text="{Binding DestinationFolderCount, StringFormat='({0} folders)'}"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Yes" Click="YesButton_Click" IsDefault="True" MinWidth="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" IsCancel="True" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>