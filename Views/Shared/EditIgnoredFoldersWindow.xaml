<Window x:Class="FileCraft.Views.Shared.EditIgnoredFoldersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Ignored Folders"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Width="500">
    <StackPanel Margin="15">
        <TextBlock Text="Enter the names of the folders to ignore, separated by commas." Margin="0,0,0,10" TextWrapping="Wrap"/>
        <TextBox x:Name="FoldersTextBox"
                 MinWidth="250"
                 Margin="0,0,0,15"
                 Style="{StaticResource ModernTextBoxStyle}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" MinWidth="80" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80" Click="CancelButton_Click" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </StackPanel>
</Window>

