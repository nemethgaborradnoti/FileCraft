<Window x:Class="FileCraft.Views.Shared.EditIgnoredFoldersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource EditIgnored_Title}"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Width="500">
    <StackPanel Margin="15">
        <TextBlock Text="{DynamicResource EditIgnored_Instruction}" Margin="0,0,0,10" TextWrapping="Wrap"/>
        <TextBox x:Name="FoldersTextBox"
                 MinWidth="250"
                 Margin="0,0,0,15"
                 Style="{StaticResource ModernTextBoxStyle}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{DynamicResource EditIgnored_OkButton}" IsDefault="True" MinWidth="80" Margin="2,2,10,2" Click="OkButton_Click"/>
            <Button Content="{DynamicResource EditIgnored_CancelButton}" IsCancel="True" MinWidth="80" Click="CancelButton_Click" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </StackPanel>
</Window>