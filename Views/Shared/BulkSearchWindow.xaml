<Window x:Class="FileCraft.Views.Shared.BulkSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulk Search"
        Width="1200" Height="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        MinWidth="400" MinHeight="300">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Input Paths (one per line):" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Found Paths:" FontWeight="SemiBold" Margin="0,0,0,5"/>

        <TextBox x:Name="InputTextBox"
                 Grid.Row="1" Grid.Column="0"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 Style="{StaticResource ModernTextBoxStyle}"
                 BorderThickness="1"
                 Padding="5"
                 VerticalContentAlignment="Top"
                 TextChanged="InputTextBox_TextChanged"/>

        <Separator Grid.Row="1" Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Grid Margin="4,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" 
                              IsChecked="{Binding AreAllFoundFilesSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                              IsThreeState="True" 
                              VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Select all" FontWeight="SemiBold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Separator/>
            </StackPanel>

            <ListView Grid.Row="1"
                      ItemsSource="{Binding FoundFiles}" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                      BorderThickness="0"
                      Background="{StaticResource TextBoxBackgroundBrush}"
                      Margin="1"
                      ItemContainerStyle="{StaticResource SharedListViewItemStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center">
                            <TextBlock Text="{Binding RelativePath}" TextTrimming="CharacterEllipsis"/>
                        </CheckBox>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>


        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Add" x:Name="AddButton" IsDefault="True" MinWidth="80" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80" Click="CancelButton_Click" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
