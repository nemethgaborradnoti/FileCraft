<Window x:Class="FileCraft.Views.Shared.BulkSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource BulkSearch_Title}"
        Width="1200" Height="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        MinWidth="400" MinHeight="300">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.475*"/>
            <ColumnDefinition Width="0.475*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="{DynamicResource BulkSearch_InputPathsLabel}" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="{DynamicResource BulkSearch_FoundPathsLabel}" FontWeight="SemiBold" Margin="0,0,0,5"/>

        <Border Grid.Row="1" Grid.Column="0"
                Margin="0,0,5,0"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{StaticResource TextBoxBackgroundBrush}">
            <ScrollViewer x:Name="CountScrollViewer"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Hidden"
                          Focusable="False">
                <TextBlock x:Name="CountTextBlock"
                           FontFamily="Consolas"
                           TextAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,5,5,5"
                           Padding="5,0,0,0"
                           Foreground="{StaticResource GrayTextBrush}"/>
            </ScrollViewer>
        </Border>

        <TextBox x:Name="InputTextBox"
                 Grid.Row="1" Grid.Column="1"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 Style="{StaticResource ModernTextBoxStyle}"
                 BorderThickness="1"
                 Padding="5"
                 VerticalContentAlignment="Top"
                 TextChanged="InputTextBox_TextChanged"
                 ScrollViewer.ScrollChanged="InputTextBox_ScrollChanged"
                 Margin="5,0,5,0"/>

        <Border Grid.Row="1" Grid.Column="2"
                Margin="5,0,0,0"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{StaticResource TextBoxBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0"
                                  IsChecked="{Binding AreAllFoundFilesSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsThreeState="True"
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{DynamicResource Common_SelectAll}" FontWeight="SemiBold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                    <Separator/>
                </StackPanel>

                <ListView Grid.Row="1"
                          ItemsSource="{Binding FilteredFoundFiles}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          BorderThickness="0"
                          Background="{StaticResource TransparentBrush}"
                          ItemContainerStyle="{StaticResource SharedListViewItemStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center">
                                <TextBlock Text="{Binding RelativePath}" TextTrimming="CharacterEllipsis"/>
                            </CheckBox>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="5,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.475*"/>
                <ColumnDefinition Width="0.475*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" x:Name="InputTotalTextBlock"
                       HorizontalAlignment="Right" FontWeight="SemiBold"
                       Text="{DynamicResource BulkSearch_TotalLinesLabel}" Margin="5,0,5,0"/>

            <TextBlock Grid.Column="2" x:Name="FoundTotalTextBlock"
                       HorizontalAlignment="Right" FontWeight="SemiBold"
                       Text="{DynamicResource BulkSearch_TotalFoundLabel}" Margin="5,0,0,0"/>
        </Grid>

        <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="{DynamicResource BulkSearch_RemoveWhitespacesButton}"
                        x:Name="RemoveWhitespacesButton"
                        Click="RemoveWhitespacesButton_Click"
                        Style="{StaticResource WarningButton}"
                        Height="32"
                        MinWidth="80"/>

                <Button Content="{DynamicResource BulkSearch_BreakIntoLinesButton}"
                        x:Name="BreakIntoLinesButton"
                        Click="BreakIntoLinesButton_Click"
                        Style="{StaticResource WarningButton}"
                        Height="32"
                        MinWidth="80"
                        Margin="10,0,0,0"/>

                <RadioButton x:Name="BySpaceRadioButton"
                             Content="{DynamicResource BulkSearch_BySpaceRadio}"
                             GroupName="BreakDelimiter"
                             IsChecked="True"
                             VerticalAlignment="Center"
                             Margin="10,0,0,0"/>

                <RadioButton x:Name="BySemicolonRadioButton"
                             Content="{DynamicResource BulkSearch_BySemicolonRadio}"
                             GroupName="BreakDelimiter"
                             VerticalAlignment="Center"
                             Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{DynamicResource BulkSearch_ApplyButton}" x:Name="ApplyButton" IsDefault="True" Height="32" MinWidth="80" Margin="0,0,10,0" Click="ApplyButton_Click"/>
                <Button Content="{DynamicResource Common_CancelButton}" IsCancel="True" Height="32" MinWidth="80" Click="CancelButton_Click" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>