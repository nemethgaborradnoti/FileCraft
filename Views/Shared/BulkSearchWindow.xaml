<Window x:Class="FileCraft.Views.Shared.BulkSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulk Search"
        Width="1200" Height="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        MinWidth="400" MinHeight="300">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.475*"/>
            <ColumnDefinition Width="0.475*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Input Paths (one per line):" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Found Paths:" FontWeight="SemiBold" Margin="0,0,0,5"/>

        <Border Grid.Row="1" Grid.Column="0"
                Margin="0,0,5,0"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{StaticResource TextBoxBackgroundBrush}">
            <ScrollViewer x:Name="CountScrollViewer"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Hidden"
                          Focusable="False">
                <TextBlock x:Name="CountTextBlock"
                           FontFamily="Consolas"
                           TextAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,5,5,5"
                           Padding="5,0,0,0"
                           Foreground="{StaticResource GrayTextBrush}"/>
            </ScrollViewer>
        </Border>

        <TextBox x:Name="InputTextBox"
                 Grid.Row="1" Grid.Column="1"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 Style="{StaticResource ModernTextBoxStyle}"
                 BorderThickness="1"
                 Padding="5"
                 VerticalContentAlignment="Top"
                 TextChanged="InputTextBox_TextChanged"
                 ScrollViewer.ScrollChanged="InputTextBox_ScrollChanged"
                 Margin="5,0,5,0"/>

        <Border Grid.Row="1" Grid.Column="2"
                Margin="5,0,0,0"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{StaticResource TextBoxBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0"
                                  IsChecked="{Binding AreAllFoundFilesSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsThreeState="True"
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Select all" FontWeight="SemiBold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                    <Separator/>
                </StackPanel>

                <ListView Grid.Row="1"
                          ItemsSource="{Binding FilteredFoundFiles}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          BorderThickness="0"
                          Background="{StaticResource TransparentBrush}"
                          ItemContainerStyle="{StaticResource SharedListViewItemStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center">
                                <TextBlock Text="{Binding RelativePath}" TextTrimming="CharacterEllipsis"/>
                            </CheckBox>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="5,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.475*"/>
                <ColumnDefinition Width="0.475*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" x:Name="InputTotalTextBlock"
                       HorizontalAlignment="Right" FontWeight="SemiBold"
                       Text="Total lines: 0" Margin="5,0,5,0"/>

            <TextBlock Grid.Column="2" x:Name="FoundTotalTextBlock"
                       HorizontalAlignment="Right" FontWeight="SemiBold"
                       Text="Total found: 0" Margin="5,0,0,0"/>
        </Grid>

        <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Remove whitespaces"
                    x:Name="RemoveWhitespacesButton"
                    Click="RemoveWhitespacesButton_Click"
                    Style="{StaticResource WarningButton}"
                    HorizontalAlignment="Left"
                    MinWidth="80"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Confirm" x:Name="ConfirmButton" IsDefault="True" MinWidth="80" Margin="0,0,10,0" Click="ConfirmButton_Click"/>
                <Button Content="Cancel" IsCancel="True" MinWidth="80" Click="CancelButton_Click" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
