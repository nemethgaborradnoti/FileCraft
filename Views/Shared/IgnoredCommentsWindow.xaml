<Window x:Class="FileCraft.Views.Shared.IgnoredCommentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource IgnoredComments_Title}"
        Width="1000" Height="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        MinHeight="300" MinWidth="400">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Filter Row -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource Common_SearchLabel}" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Grid Grid.Column="1">
                <TextBox Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"/>
                <TextBlock IsHitTestVisible="False"
                           Text="{DynamicResource Common_FilterPlaceholder}"
                           Foreground="{StaticResource GrayTextBrush}"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SearchFilter}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="1">
            <Grid Margin="4,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{DynamicResource IgnoredComments_CharsHeader}" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="{StaticResource GrayTextBrush}" FontSize="11"/>

                <CheckBox Grid.Column="1" IsChecked="{Binding AreAllSelected}" IsThreeState="True" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="{DynamicResource Common_SelectAll}" FontWeight="SemiBold" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </Grid>
            <Separator/>
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
            <ListView x:Name="FilesListView" ItemsSource="{Binding FilteredFiles}" BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ItemContainerStyle="{StaticResource SharedListViewItemStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding CommentCountDisplay}"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,15,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource GrayTextBrush}"
                                       FontFamily="Consolas"/>

                            <CheckBox Grid.Column="1" IsChecked="{Binding IsSelected}" VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="2"
                                       Text="{Binding RelativePath}"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="{DynamicResource IgnoredComments_CountButton}"
                        Command="{Binding CountCommentsCommand}"
                        MinWidth="120"
                        Margin="{StaticResource RightMargin}"
                        Style="{StaticResource WarningButton}"/>

                <TextBlock Text="{Binding TotalCountsDisplay}"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{DynamicResource Common_SaveButton}" 
                        IsDefault="True" 
                        Command="{Binding SaveCommand}" 
                        MinWidth="{StaticResource DefaultButtonMinWidth}" 
                        Margin="{StaticResource RightMargin}"/>
                <Button Content="{DynamicResource Common_CancelButton}" 
                        IsCancel="True" 
                        Command="{Binding CancelCommand}" 
                        MinWidth="{StaticResource DefaultButtonMinWidth}" 
                        Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>