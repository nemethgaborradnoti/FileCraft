<Window x:Class="FileCraft.Views.Shared.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Notification"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Width="450"
        MinHeight="150"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="0" Width="48" Height="48" Margin="0,0,15,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding IconGlyph}" FontFamily="{StaticResource MaterialIcons}" Foreground="{Binding IconBrush}" />
            </Viewbox>

            <TextBlock x:Name="MessageTextBlock"
                       Grid.Column="1"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
        </Grid>

        <Button x:Name="OkButton"
                Grid.Row="1"
                Content="OK"
                Click="OkButton_Click"
                IsDefault="True"
                HorizontalAlignment="Center"
                Padding="30,8"/>
    </Grid>
</Window>