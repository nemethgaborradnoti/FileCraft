<UserControl x:Class="FileCraft.Views.TreeGeneratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:FileCraft.ViewModels.Functional"
             xmlns:controls="clr-namespace:FileCraft.Views.Shared.Controls"
             xmlns:local="clr-namespace:FileCraft.ViewModels.Functional"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:TreeGeneratorViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HeaderStackPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="*"/>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="Auto"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0">
            <GroupBox.Header>
                <StackPanel Style="{StaticResource HeaderStackPanelStyle}">
                    <TextBlock Text="Folders to Include" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <Button Command="{Binding FullscreenManager.ToggleCommand}"
                            CommandParameter="{x:Static local:TreeGeneratorFullscreenState.Folders}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FullscreenButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FullscreenManager.CurrentState}" Value="Folders">
                                        <Setter Property="Tag" Value="Active"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </GroupBox.Header>
            <TreeView ItemsSource="{Binding RootFolders}" BorderThickness="0"
                      ItemContainerStyle="{StaticResource SharedTreeViewItemStyle}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" IsThreeState="True" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock>
                    <Run Text="Folders affected:" FontWeight="Bold"/>
                    <Run Text="{Binding IncludedFoldersCount, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
            <controls:ExportOptionsControl DataContext="{Binding}" />
            <Button Content="Generate Tree Structure"
                    Command="{Binding GenerateTreeStructureCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>