<UserControl x:Class="FileCraft.Views.TreeGeneratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileCraft.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <TextBlock Text="Generate Folder Tree Structure" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <TextBlock Text="This tool will create a text file representing the folder and file structure of the selected source path." 
                   TextWrapping="Wrap" Margin="0,0,0,15"/>

        <TextBlock Text="Folders to Ignore:" FontWeight="SemiBold" Margin="0,10,0,5"/>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" MinHeight="100" MaxHeight="250">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <!-- This ItemsControl binds to the same AvailableFolders list from MainViewModel -->
                <ItemsControl ItemsSource="{Binding AvailableFolders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="5,3"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Button x:Name="GenerateButton" 
                Content="Generate Tree Structure" 
                Command="{Binding GenerateTreeStructureCommand}"
                Margin="0,20,0,0" 
                HorizontalAlignment="Left"
                FontWeight="Bold"/>
    </StackPanel>
</UserControl>
